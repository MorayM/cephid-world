---
import { Image } from 'astro:assets';
import SocialLinks from './SocialLinks.astro';
import HeaderLink from './HeaderLink.astro';
import logo from '../images/CEPHID-logo.png';
// height = 70px = 3.5rem;
---

<header>
  <nav>
    <a href="/" class="logo-link tablet-hide"><Image src={logo} alt="The Cephid logo" /></a>
    <div class="internal-links desktop-links">
      <HeaderLink href="/">Home</HeaderLink>
      <!-- <HeaderLink href="/#mailingList">Mailing List</HeaderLink> -->
      <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
      <HeaderLink href="/buy">Buy</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/live">Live</HeaderLink>
      <!-- <HeaderLink href="/laser-harp">Laser Harp</HeaderLink> -->
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>

    <!-- Mobile hamburger button -->
    <button class="hamburger mobile-only" aria-label="Toggle navigation menu">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>

    <div class="social-links phone-hide">
      <SocialLinks />
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="mobile-menu">
    <div class="mobile-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/buy">Buy</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/live">Live</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>
    <div class="mobile-social">
      <SocialLinks />
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger');
    const mobileMenu = document.querySelector('.mobile-menu');

    if (hamburger && mobileMenu) {
      // Toggle menu
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        mobileMenu.classList.toggle('active');
      });

      // Close menu when clicking on a link
      mobileMenu.addEventListener('click', function(e) {
        if (e.target && (e.target as HTMLElement).tagName === 'A') {
          hamburger.classList.remove('active');
          mobileMenu.classList.remove('active');
        }
      });
    }
  });
</script>

<style>
  header {
    margin: 0;
    padding-inline: 1rem;
    background: #2f6e7a;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  nav .internal-links {
    display: flex;
    gap: 0;
  }

  nav .internal-links a {
    padding: 1rem 0.8rem 0.8rem;
    color: var(--black);
    border-top: 0.2rem solid transparent;
    border-bottom: 0.2rem solid transparent;
    text-decoration: none;
  }

  nav .internal-links a.active,
  nav .internal-links a.active:hover {
    border-bottom-color: var(--accent);
  }

  nav .internal-links a:hover {
    border-bottom-color: var(--accent-dark);
  }

  nav img {
    height: 2rem;
    width: auto;
  }

  .social-links,
  .social-links a {
    display: flex;
    line-height: 1;
  }

  .social-links {
    gap: 1rem;
  }

  /* Hamburger menu styles */
  .hamburger {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    gap: 0.25rem;
  }

  .hamburger-line {
    width: 1.5rem;
    height: 0.125rem;
    background-color: white;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .hamburger.active .hamburger-line:nth-child(1) {
    transform: translateY(0.375rem) rotate(45deg);
  }

  .hamburger.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active .hamburger-line:nth-child(3) {
    transform: translateY(-0.375rem) rotate(-45deg);
  }

  /* Mobile menu styles */
  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #2f6e7a;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }

  .mobile-menu.active {
    max-height: 20.5rem;
  }

  .mobile-links {
    display: flex;
    flex-direction: column;
    padding: 0 1rem;
  }

  .mobile-links a {
    padding: 0.75rem 0;
    color: white;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: color 0.2s ease;
  }

  .mobile-links a:last-child {
    border-bottom: none;
  }

  .mobile-links a:hover,
  .mobile-links a.active {
    color: var(--accent);
  }

  .mobile-social {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
  }

  /* Hide mobile elements by default */
  .mobile-only {
    display: none;
  }

  @media (max-width: 940px) {
    .tablet-hide {
      display: none;
    }
    .social-links > a > svg {
      line-height: 24px;
    }
  }

  @media (max-width: 780px) {
    .phone-hide {
      display: none;
    }

    /* Hide desktop navigation, show mobile elements */
    nav .internal-links.desktop-links {
      display: none;
    }

    .mobile-only,
    .mobile-menu {
      display: flex;
    }

    .mobile-menu {
      display: block;
    }

    /* Show logo on mobile */
    .logo-link.tablet-hide {
      display: block;
    }

    nav {
      width: 100%;
      justify-content: space-between;
      min-height: 3.5rem;
    }
  }

  @media (max-width: 500px) {
    .mobile-links a {
      padding: 1rem 0;
    }
  }
</style>
