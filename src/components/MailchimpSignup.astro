<h2 id="mailingList">Mailing list</h2>
<div id="mc_embed_shell">
  <div id="mc_embed_signup">
    <form action="https://world.us21.list-manage.com/subscribe/post?u=8b6222c7c8dc7e8328c0cbc1c&amp;id=39c50371d1&amp;f_id=0061e4e6f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self" novalidate="">
      <div id="mc_embed_signup_scroll">
        <div class="indicates-required">
          <span class="asterisk">*</span> indicates required
        </div>
        <div class="mc-field-group">
          <label for="mce-EMAIL">Email Address <span class="asterisk">*</span></label>
          <input type="email" name="EMAIL" class="required email" id="mce-EMAIL" required="" value="">
        </div>
        <div id="mce-responses" class="clear foot">
            <div class="response" id="mce-error-response" style="display: none;"></div>
            <div class="response" id="mce-success-response" style="display: none;"></div>
        </div>
        <div aria-hidden="true" style="position: absolute; left: -5000px;">
            /* real people should not fill this in and expect good things - do not remove this or risk form bot signups */
            <input type="text" name="b_8b6222c7c8dc7e8328c0cbc1c_39c50371d1" tabindex="-1" value="">
        </div>
        <div class="optionalParent">
          <div class="clear foot">
            <input type="submit" name="subscribe" id="mc-embedded-subscribe" class="button" value="Subscribe">
            <p style="margin: 0px auto;"><a href="http://eepurl.com/iCjAoQ" title="Mailchimp - email marketing made easy and fun"><span style="display: inline-block; background-color: transparent; border-radius: 4px;"><img class="refferal_badge" src="https://digitalasset.intuit.com/render/content/dam/intuit/mc-fe/en_us/images/intuit-mc-rewards-text-dark.svg" alt="Intuit Mailchimp" style="width: 220px; height: 40px; display: flex; padding: 2px 0px; justify-content: center; align-items: center;"></span></a></p>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<style>
  .indicates-required, .asterisk {
    display: none;
  }
  .clear.foot > p {
    display: none;
  }
  .optionalParent {
    margin-block-start: 1rem;
  }
  input[type=email] {
    width: calc(100% - 2rem);
    background-color: transparent;
    border: 4px solid white;
    padding-block: 0.5rem;
    padding-inline: 1rem;
    border-radius: 1.5rem;
    color: white;
    font-family: 'Azo Sans', sans-serif;
  }
  input[type=submit] {
    padding-inline: 2rem;
    padding-block: 1rem;
    background-color: transparent;
    border: 4px solid white;
    border-radius: 1.5rem;
    color: white;
    font-family: 'Azo Sans', sans-serif;
    font-size: 1rem;
  }
  input[type=submit]:hover {
    background-color: var(--accent-dark);
    cursor: pointer;
  }
</style>