---
import SocialLinks from './SocialLinks.astro'

const today = new Date()
// height = 70px = 3.5rem;
---

<footer>
  <span>&copy; {today.getFullYear()} Moray Macdonald. All rights reserved.</span>
  <div class="social-links">
    <SocialLinks />
  </div>
</footer>
<style>
  footer {
    padding: 1rem 0.5rem 1rem 0.5rem;
    background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)) no-repeat;
    color: rgb(var(--gray));
    text-align: center;
    font-size: 1rem;
    animation: fadeIn 0.8s var(--animation-easing) 1s both;
  }

  footer span {
    display: block;
    margin-bottom: 0.5rem;
    animation: slideInLeft 0.6s var(--animation-easing) 1.1s both;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 0.5rem;
    animation: slideInRight 0.6s var(--animation-easing) 1.2s both;
  }

  .social-links a {
    text-decoration: none;
    color: rgb(var(--gray));
    transition: all var(--animation-duration) var(--animation-easing);
    border-radius: 50%;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-links a:hover {
    color: rgb(var(--gray-dark));
    transform: translateY(-3px) scale(1.1);
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 12px rgba(var(--gray), 0.3);
  }
</style>
